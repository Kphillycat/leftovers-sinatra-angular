<!-- login.erb -->

<div class="container">
  <div id="daform" class="darkblue">
    <form method="POST" class="form-horizontal" role="form" action="/login">

      <h3><%= flash[:error] %></h3>
      <label for="username">Username</label>
      <input class="form-control" id="username" type="text" name="username"></input>
      <br>
      <label for="password">Password</label>
      <input class="form-control" id="password" type="password" name="password"></input>
      <input class="form-control" id="login-btn" type="submit"></input>
    </form>
  </div>
</div>